<header class="bg-light mb-5 px-4 py-2 d-flex justify-content-between align-items-center">
  <p class="m-0">Wikinimous</p>
  <button class="btn btn-primary">New Article</button>
</header>
<div class="container">
  <% @articles.each do |article| %>
    <div class="mb-4 p-4">
      <h1>
        <%= article.title %>
      </h1>
      <p>
        <%= article.content %>
      </p>
    </div>
  <% end %>
</div>

